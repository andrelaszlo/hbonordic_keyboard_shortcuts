{
  "manifest_version": 2,
  "name": "HBO Nordic Keyboard Shortcuts",
  "version": "1.0",

  "description": "Adds keyboard shortcuts for fullscreen, pausing, muting, volume controls and skipping to the hbonordic.com video player",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.hbonordic.com/*"],
      "js": ["inject.js"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "browser_style": true
  },

  "web_accessible_resources": ["shortcuts.js"]
}
